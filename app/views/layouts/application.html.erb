<!DOCTYPE html>
<html>
  <head>
    <title>WebProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bback">
  <div class="back">
  <div class="navcon">
  <div class="container navigation">
	  	<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		    	<% if user_signed_in? %>
				    <div class="row">
				      <a class="navbar-brand" href=<%= tasks_path %>>Home</a>
				      <%= link_to "Contacts", contacts_path, class: "nav-link" %>
			        </div>
		        <% end %>
		    </div>
				<%#<%= link_to 'Add task', new_task_path, class: 'btn btn-outline-primary pull-xs-right' %> 
				<%#<ul class="navbar-nav mr-auto"> %>
					<% if user_signed_in? %>
						<%#<li class="nav-item">%>
							<div class="row">
								<%= link_to "My profile", edit_user_registration_path, class: "nav-link" %>
								<%= link_to "Exit", destroy_user_session_path, method: :delete, class: "nav-link" %>
							</div>
						<%#</li>%>
					<% else %>
						<%#<li class="nav-item">%>
						<div class="row">
							<%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
							<%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
						</div>
						<%#</li>%>
						<%#<li class="nav-item">%>
							
						<%#</li>%>
					<% end %>
				<%#</ul>%>
		    <!-- Collect the nav links, forms, and other content for toggling -->
		  </div><!-- /.container-fluid -->
		</nav>
	</div>
	</div>

	<div class="container main">
		<div class="row">
			<div class="col-md-12">
				<% flash.each do |name, message| %>
					<div class="alert <%= bootstrap_class_for(name) %>">
						<button class="close" data-dismiss="alert">&times;</button>
						<%= message %>
					</div>
				<% end %>
			</div>
		</div>
		<div class="row">
			<% if user_signed_in? %>
				<div class="col-md-3">
					<%= render 'shared/submenu' %>
					<div class="buttons-panel main_buttons_panel">
						<%= link_to 'Add...', new_taskbox_path, class: 'btn btn-outline-primary btn-sm' %>
					</div>
				</div>
			<% end %>
			<div class="col-md-9">
				<%= yield %>
			</div>
		</div>
	</div>
	</div>
  </body>
</html>
