<%= form_for @task do |f| %>
	<div class="form-control">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="form-control">
		<%= f.label :summary %>
		<%= f.text_area :summary %>
	</div>

	<div class="form-control">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

	<div class="form-control">
		<%= f.submit 'Save' %>
	</div>
<% end %>