<article class="task-show">
	<section class="task-head">
		<h2><%= @task.name %></h2>
	</section>

	<section class="task-description">
		<%= @task.description %>
	</section>

	<section class="task-meta">
		<small>
			Created at: 
			<time><%= @task.created_at.to_date.strftime("%d %B, %Y") %></time>
			|      
			Last update: 
			<time><%= @task.updated_at.to_date.strftime("%d %B, %Y") %></time>
			|
			<%= link_to 'Edit', edit_task_path(@task) %>
			|
			<%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you shure you want to delete this task?' } %>
		</small>
	</section>
</article>

<%= render 'disqas' %>