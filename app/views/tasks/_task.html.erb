<article class="task">
	<section class="task-head">
		<h3><%= link_to task.name, task_path(task) %></h3>
	</section>

	<section class="task-meta">
		<small>
			<time><%= task.created_at.to_date.strftime("%d %B, %Y") %></time>
			|
			<%= link_to 'Edit', edit_task_path(task) %>
			|
			<%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you shure you want to delete this task?' } %>
		</small>
	</section>
</article>

